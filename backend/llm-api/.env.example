# ==============================================================================
# SABHYA AI v0.4.0 - Environment Configuration
# ==============================================================================
# Copy this file to .env and update values for your environment
# NEVER commit .env to version control!
# ==============================================================================

# ===== CORE =====
ENVIRONMENT=development  # development, staging, production
DEBUG=True
APP_VERSION=0.4.0

# ===== DATABASE =====
DATABASE_URL=postgresql://sabhya:CHANGE_ME@localhost:5432/sabhya_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# ===== REDIS (Optional - for distributed rate limiting) =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your-redis-password

# ===== AUTHENTICATION =====
# CRITICAL: Change these in production!
SECRET_KEY=your-super-secret-key-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Legacy API keys (comma-separated) - for backward compatibility
API_KEYS=dev-key-1
LEGACY_AUTH_ENABLED=true

# ===== CORS & SECURITY =====
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
ALLOWED_HOSTS=localhost,127.0.0.1

# ===== PII DETECTION =====
PII_DETECTION_ENABLED=true
# Modes: ALLOW_ALL, FLAG_ONLY, BLOCK_HIGH_RISK, BLOCK_ALL
PII_BLOCKING_MODE=FLAG_ONLY
PII_CONFIDENCE_THRESHOLD=0.5
PII_ANONYMIZE_LOGS=true

# ===== RATE LIMITING =====
RATE_LIMIT_ENABLED=true
DEFAULT_RATE_LIMIT_PER_MINUTE=50

# ===== OLLAMA =====
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODELS=mistral:7b-instruct-q4_K_M,llama3:latest
OLLAMA_TIMEOUT_SECONDS=120

# ===== CHROMA DB =====
CHROMA_DB_PATH=./chroma_data

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or text

# ===== AUDIT =====
AUDIT_LOG_RETENTION_DAYS=90
# CRITICAL: Change in production!
AUDIT_HMAC_SECRET=your-audit-hmac-secret-minimum-32-characters

# ===== MONITORING (Optional) =====
PROMETHEUS_ENABLED=false
# SENTRY_DSN=https://xxx@sentry.io/xxx
